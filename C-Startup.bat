@ECHO OFF
TITLE C-Startup
CLS

:Menus
CLS
COLOR 1
ECHO DO YOU WANT TO CLEAN THE STARTUP FOLDER? (Y/N)
SET /p Input=">>> "
IF /I "%input%"=="Y" GOTO Accept
IF /I "%input%"=="N" GOTO Reject

:Accept
CLS
COLOR 6
ECHO CLEANING STARTUP...
TIMEOUT 3 >NUL
CLS

DEL /q/f/s "%USERPROFILE%\Start Menu\Programs\Startup"

CLS
COLOR 2
ECHO SUCCESSFULLY CLEANED STARTUP!
TIMEOUT 3 >NUL
GOTO Menus

:Reject
CLS
COLOR 4
ECHO ABORTING PROCESS...
TIMEOUT 3 >NUL
GOTO Exit

:Exit
CLS
COLOR E
ECHO SHUTTING DOWN...
TIMEOUT 3 >NUL
CLS
EXIT
